# PR Review System - Environment Configuration
# Copy this file to .env and update with your settings

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Choose your database backend: 'mongodb' or 'dynamodb'
DATABASE_TYPE=mongodb

# --------------------------------------------
# MongoDB Configuration (when DATABASE_TYPE=mongodb)
# --------------------------------------------
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=pr_review

# --------------------------------------------
# DynamoDB Configuration (when DATABASE_TYPE=dynamodb)
# --------------------------------------------
# AWS Region where DynamoDB tables are located
DYNAMODB_REGION=us-east-1

# Prefix for all DynamoDB table names
DYNAMODB_TABLE_PREFIX=pr_review

# AWS Credentials (optional if using AWS CLI or IAM roles)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Custom DynamoDB endpoint (optional, for local DynamoDB)
# Example: http://localhost:8000
DYNAMODB_ENDPOINT_URL=

# ============================================
# AI CONFIGURATION
# ============================================
# AI API Key for code analysis
AI_API_KEY=your_api_key_here

# AI Base URL (optional, for custom endpoints)
AI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# AI Model to use
AI_MODEL=gemini-2.5-flash-lite

# Temperature settings (0.0-1.0)
AI_TEMPERATURE=0.1
AI_ANALYSIS_TEMPERATURE=0.1

# ============================================
# GITHUB CONFIGURATION
# ============================================
# GitHub Personal Access Token for private repositories
GITHUB_TOKEN=your_github_token_here

# ============================================
# APPLICATION SETTINGS
# ============================================
# Directory for temporary repository clones
TEMP_REPO_DIR=temp_repos

# Maximum file size to analyze (in bytes)
MAX_FILE_SIZE=100000
